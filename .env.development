# Development Environment Configuration
# This file contains development-specific settings

# Application settings
APP_NAME="eCourts Cause List Scraper (Development)"
APP_VERSION="1.0.0-dev"
DEBUG=true

# Server configuration
HOST=127.0.0.1
PORT=8000

# Logging configuration (more verbose for development)
LOG_LEVEL=DEBUG
LOG_FILE=ecourts_scraper_dev.log
LOG_REQUESTS=true
LOG_ERRORS=true
LOG_DOWNLOADS=true

# Development features
DEV_RELOAD=true
DEV_LOG_SQL=true
DEV_SHOW_DOCS=true

# CORS settings (more permissive for development)
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000", "http://127.0.0.1:8000", "http://localhost:5173"]
CORS_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS", "PATCH"]

# Faster timeouts for development
REQUEST_TIMEOUT=10
CACHE_DURATION=60

# Development-specific directories
DOWNLOADS_DIR=static/downloads/dev
CLEANUP_AFTER_HOURS=1

# Disable rate limiting for development
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=60