# Production Environment Configuration
# This file contains production-specific settings

# Application settings
APP_NAME="eCourts Cause List Scraper"
APP_VERSION="1.0.0"
DEBUG=false

# Server configuration
HOST=0.0.0.0
PORT=8000

# Production server settings
PROD_WORKERS=4
PROD_MAX_CONNECTIONS=1000
PROD_KEEPALIVE_TIMEOUT=5

# Logging configuration (less verbose for production)
LOG_LEVEL=INFO
LOG_FILE=ecourts_scraper.log
LOG_REQUESTS=false
LOG_ERRORS=true
LOG_DOWNLOADS=true

# Security settings (restrictive for production)
CORS_ORIGINS=["https://yourdomain.com"]
CORS_METHODS=["GET", "POST"]

# Production timeouts and limits
REQUEST_TIMEOUT=30
MAX_RETRIES=3
RETRY_DELAY=2.0

# Rate limiting (stricter for production)
RATE_LIMIT_REQUESTS=60
RATE_LIMIT_WINDOW=60

# File handling (production settings)
MAX_FILE_SIZE_MB=50
CLEANUP_AFTER_HOURS=24

# Monitoring and health checks
ENABLE_METRICS=true
HEALTH_CHECK_INTERVAL=30

# Backup settings
ENABLE_AUTO_BACKUP=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=7

# Cache settings
ENABLE_CACHING=true
CACHE_DURATION=300

# Disable development features
DEV_RELOAD=false
DEV_LOG_SQL=false
DEV_SHOW_DOCS=false