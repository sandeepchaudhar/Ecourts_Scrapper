# eCourts Cause List Scraper Environment Configuration
# Copy this file to .env and modify the values as needed

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Basic application information
APP_NAME="eCourts Cause List Scraper"
APP_VERSION="1.0.0"
DEBUG=false

# Server configuration
HOST=0.0.0.0
PORT=8000

# =============================================================================
# ECOURTS PORTAL CONFIGURATION
# =============================================================================

# eCourts portal URLs (modify if the portal URLs change)
ECOURTS_BASE_URL=https://ecourts.gov.in
ECOURTS_SERVICES_URL=https://ecourts.gov.in/ecourts_home/static/manuals/cis/
ECOURTS_CAUSELIST_URL=https://ecourts.gov.in/ecourts_home/static/causelist/

# =============================================================================
# FILE HANDLING SETTINGS
# =============================================================================

# File size and type restrictions
MAX_FILE_SIZE_MB=50
ALLOWED_FILE_TYPES=[".pdf"]

# Download directory settings
DOWNLOADS_DIR=static/downloads
CLEANUP_AFTER_HOURS=24

# =============================================================================
# NETWORK AND REQUEST SETTINGS
# =============================================================================

# Request timeout and retry settings
REQUEST_TIMEOUT=30
MAX_RETRIES=3
RETRY_DELAY=1.0

# Session and caching settings
SESSION_TIMEOUT=3600  # 1 hour in seconds
ENABLE_CACHING=true
CACHE_DURATION=300    # 5 minutes in seconds

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Logging levels: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
LOG_FILE=ecourts_scraper.log

# Enable/disable specific log types
LOG_REQUESTS=true
LOG_ERRORS=true
LOG_DOWNLOADS=true

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# CORS configuration
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000", "http://127.0.0.1:8000"]
CORS_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS"]
CORS_HEADERS=["*"]

# Rate limiting (requests per minute)
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Development-specific settings (only used when DEBUG=true)
DEV_RELOAD=true
DEV_LOG_SQL=false
DEV_SHOW_DOCS=true

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================

# Production-specific settings (only used when DEBUG=false)
PROD_WORKERS=4
PROD_MAX_CONNECTIONS=1000
PROD_KEEPALIVE_TIMEOUT=5

# =============================================================================
# DOCKER SETTINGS
# =============================================================================

# Docker-specific environment variables
DOCKER_ENV=false
CONTAINER_NAME=ecourts-scraper
HEALTH_CHECK_INTERVAL=30

# =============================================================================
# MONITORING AND METRICS
# =============================================================================

# Enable/disable monitoring features
ENABLE_METRICS=false
METRICS_PORT=9090
HEALTH_CHECK_ENDPOINT=/api/health

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# External service URLs (if any)
# EXTERNAL_API_URL=https://api.example.com
# EXTERNAL_API_KEY=your_api_key_here

# =============================================================================
# BACKUP AND MAINTENANCE
# =============================================================================

# Backup settings
ENABLE_AUTO_BACKUP=false
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=7

# Maintenance mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="System is under maintenance. Please try again later."